# Wait 10 milliseconds for starship to check files under the current directory.
scan_timeout = 1000

# Allow commands to execute longer
command_timeout = 1000

# Disable the blank line at the start of the prompt
add_newline = false

# # Replace the '‚ùØ' symbol in the prompt with '‚ûú'
# [character] # The name of the module we are configuring is 'character'
# success_symbol = '[Œª](bold green)' # The 'success_symbol' segment is being set to '‚ûú' with the color 'bold green'
# # success_symbol = '[Óà¨](bold green)' # The 'success_symbol' segment is being set to '‚ûú' with the color 'bold green'
# error_symbol = '[ÔÅ±](bold red)'

[username]
show_always = true
style_user = "bg:#434e70 fg:white"
style_root = "bg:#9A348E"
format = '[ $user ](bold $style)'
disabled = false

[directory]
truncate_to_repo = true
read_only = 'üîí'
read_only_style = 'red'
truncation_symbol = ''
home_symbol = '~'
truncation_length = 3
style = "bg:#394360 fg:white"
format = '[$path ‚ùØ ]($style)[$read_only]($read_only_style)'

[git_branch]
symbol = "Ôêò"
format = '[ $symbol $branch ](fg:#769ff0 bg:#303850)'

[git_status]
ahead = '‚á°${count}'
diverged = '‚áï‚á°${ahead_count}‚á£${behind_count}'
behind = '‚á£${count}'
staged = '[++\($count\)](fg:#a0a9cb bg:#303850)'
format = '[($all_status$ahead_behind )](fg:#769ff0 bg:#303850)'

[battery]
full_symbol = 'Û∞Åπ'
charging_symbol = 'Û∞ÇÑ'
discharging_symbol = 'Û±ä£'
format = '[ $symbol $percentage ](fg:#769ff0 bg:#262d40)'

[[battery.display]]
threshold = 30
style = 'bold red'

[[battery.display]]
threshold = 70
style = 'bold yellow'

[[battery.display]]
threshold = 100
style = 'bold green'

[time]
disabled = false
time_format = "%R" # Hour:Minute Format
format = '[ Ôê∫ $time ](fg:#a0a9cb bg:#1d2230)'

[cmd_duration]
min_time = 1000
format = '[$duration](fg:bold purple bg:#131720)'
show_milliseconds = false

[custom.ranger]
command = 'echo "$RANGER_LEVEL"' # shows output of command
when = 'test -n "$RANGER_LEVEL"'
format = '[Ôâù $output ](bold purple)'

[jobs]
style = 'bold white'
format = '[$symbol$number ]($style)'
symbol = '+'
number_threshold = 1
symbol_threshold = 1
disabled = false

[character]
success_symbol = "[ Œª](bold blue)"
error_symbol = "[ Óà±](bold purple)"
